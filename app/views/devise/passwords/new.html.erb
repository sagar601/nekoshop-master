<h2 class="ui header">Forgot your password?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'ui form' }) do |f| %>
  <% unless devise_error_messages!.to_s.empty? %>
    <div class="ui negative message">
      <%= devise_error_messages! %>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div class="actions">
    <%= f.submit "Send me reset password instructions", class: 'ui teal button' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
